{
  "name": "esbuild-svelte",
  "version": "0.7.1",
  "description": "esbuild plugin to resolve .svelte files",
  "repository": "https://github.com/EMH333/esbuild-svelte",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "git push origin --follow-tags",
    "postversion": "npm publish",
    "preversion": "npm run lint && npm run build && npm test",
    "pretest": "tsc -p tsconfig.json --noEmit",
    "test": "uvu test/ .*\\.mjs",
    "build": "node build.js",
    "lint": "prettier --check .",
    "fix": "prettier --write ."
  },
  "keywords": [
    "svelte",
    "esbuild",
    "plugin"
  ],
  "author": {
    "name": "Ethan Hampton",
    "url": "https://www.ethohampton.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "esbuild": ">=0.9.6",
    "svelte": ">=3.43.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.19",
    "esbuild": "^0.14.23",
    "prettier": "^2.6.2",
    "rewrite-imports": "^3.0.0",
    "sass": "^1.49.9",
    "svelte": "^3.48.0",
    "svelte-preprocess-esbuild": "^2.0.0",
    "svelte-preprocess-sass": "^2.0.1",
    "typescript": "^4.7.2",
    "uvu": "^0.5.3"
  },
  "engines": {
    "node": ">=14"
  }
}
