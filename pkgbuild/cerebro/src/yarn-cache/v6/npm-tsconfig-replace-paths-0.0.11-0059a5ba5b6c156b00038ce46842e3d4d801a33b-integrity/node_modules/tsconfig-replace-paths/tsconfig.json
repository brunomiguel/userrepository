{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "@src": ["./src"],
      "@src/*": ["./src/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": false,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**", "build", "scripts"]
}
